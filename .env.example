# Copy this file to .env and fill the values (do NOT commit real secrets).

# Flask
FLASK_HOST=0.0.0.0
FLASK_PORT=5050
FLASK_DEBUG=true

# MongoDB (leave empty if not using Mongo)
MONGO_USERNAME=fakeMongoUsernameForLocalTestingOnly
MONGO_PASSWORD=fakeMongoPasswordForLocalTestingOnly
# Example format for a Mongo Atlas connection string host component:
# MONGO_CLUSTER=cluster0.mongodb.net/myDatabase?retryWrites=true&w=majority
MONGO_CLUSTER=fakeMongoClusterForLocalTestingOnly

# AWS / S3
AWS_ACCESS_KEY=fakeAccessKeyForLocalTestingOnly
AWS_SECRET_KEY=fakeSecretKeyForLocalTestingOnly
S3_BUCKET_NAME=fakeBucketNameForLocalTestingOnly
S3_FILE_KEY=fakeFileKeyForLocalTestingOnly
REGION_NAME=us-east-1

# Admin email credentials (for checking Zeffy notifications)
# For Gmail, create an App Password and put it here (16 chars)
ADMIN_EMAIL_USER=you@example.com
ADMIN_EMAIL_PASSWORD=using

# Zeffy payment notification parsing
ZEFFY_EMAIL=notifications@zeffy.com
ZEFFY_SUBJECT=Zeffy Payment Notification
CHECK_ZEFFY_EMAIL_TIME_BY_MINUTES=60

GOOGLE_SPREADSHEET_ID=fakeSpreadsheetIdForLocalTestingOnly
GOOGLE_WORKSHEET_NAME=Sheet1
